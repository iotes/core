{
  "name": "mqtt-dmx-bridge",
  "version": "0.0.1",
  "description": "Creates an mqtt client which listens form actions and runs dmx scripts in response",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run watch",
    "build": "tsc",
    "test": "jest ./test --detectOpenHandles",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/run.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/react": "^16.9.19",
    "dmx": "^0.2.4",
    "mqtt": "^3.0.0",
    "react": "^16.12.0",
    "rxjs": "^6.5.4"
  },
  "devDependencies": {
    "eslint-plugin-jest": "^23.6.0",
    "concurrently": "^5.1.0",
    "@types/jest": "^25.1.1",
    "@types/node": "^13.7.0",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "aedes": "^0.40.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^25.1.0",
    "ts-jest": "^25.2.0",
    "typescript": "^3.7.5"
  }
}
